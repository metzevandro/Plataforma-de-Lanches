@{
    ViewData["Title"] = "UploadFiles";
}

<div class="d-flex flex-column align-items-center mb-4">
    <span class="material-icons-outlined fs-1 text-primary mb-2">upload</span>
    <h3 class="fw-bold">Upload de Arquivos</h3>
</div>

<div class="container">

    <!-- Mensagem de erro -->
    @if (ViewData["Erro"] != null)
    {
        <div class="alert alert-danger d-flex align-items-center gap-2">
            <span class="material-icons-outlined">error</span>
            <span>@ViewData["Erro"]</span>
        </div>
    }

    <!-- Resultado do Upload -->
    @if (ViewData["Resultado"] != null)
    {
        <div class="alert alert-success d-flex flex-column align-items-start gap-2">
            <div class="d-flex align-items-center gap-2">
                <span class="material-icons-outlined">check_circle</span>
                <span>@ViewData["Resultado"]</span>
            </div>
            <hr />
            @if (ViewBag.Arquivos != null)
            {
                <ul class="list-group list-group-flush mt-2 w-100">
                    @foreach (string arquivo in ViewBag.Arquivos)
                    {
                        <li class="list-group-item d-flex align-items-center gap-2">
                            <span class="material-icons-outlined text-secondary">insert_drive_file</span>
                            <span>@arquivo</span>
                        </li>
                    }
                </ul>
            }
        </div>
    }

    <div class="mt-3 d-flex justify-content-start">
        <a class="btn btn-outline-info" asp-controller="AdminImagens" asp-action="GetImagens">
            <span class="material-icons-outlined me-1">image</span>
            Exibir Imagens
        </a>
    </div>

</div>
