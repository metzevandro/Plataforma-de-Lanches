@model Plataforma_de_Lanches.Models.Categoria

@{
    ViewData["Title"] = "Nova Categoria";
}

<div class="container my-4">
    <div class="d-flex align-items-center gap-2 mb-3">
        <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-action="Create" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label fw-semibold"></label>
                    <input asp-for="Nome" class="form-control" placeholder="Digite o nome da categoria" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Descricao" class="form-label fw-semibold"></label>
                    <input asp-for="Descricao" class="form-control" placeholder="Digite a descrição da categoria" />
                    <span asp-validation-for="Descricao" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="Index" class="btn btn-secondary d-flex align-items-center gap-2">
                        <span class="material-icons-outlined">arrow_back</span>
                        Voltar
                    </a>
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                        <span class="material-icons-outlined">save</span>
                        Criar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
