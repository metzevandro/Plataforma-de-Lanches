@model Plataforma_de_Lanches.Models.Categoria

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="container my-4">
    <div class="d-flex align-items-center gap-2 mb-3">
        <span class="material-icons-outlined fs-3 text-primary">info</span>
        <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Nome)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

                <dt class="col-sm-3 fw-semibold">@Html.DisplayNameFor(model => model.Descricao)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descricao)</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-start gap-2 mt-3">
        <a asp-action="Index" class="btn btn-secondary d-flex align-items-center gap-2">
            <span class="material-icons-outlined">arrow_back</span>
            Voltar
        </a>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning d-flex align-items-center gap-2">
            <span class="material-icons-outlined">edit</span>
        </a>
        
    </div>
</div>
