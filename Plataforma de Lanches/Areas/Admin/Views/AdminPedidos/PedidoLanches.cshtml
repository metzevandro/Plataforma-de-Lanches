@model Plataforma_de_Lanches.ViewModels.PedidoLancheViewModel

@{
    ViewData["Title"] = "Itens do Pedido";
    decimal totalPedido = 0;
}

<div class="container my-4">
    <!-- Cabeçalho -->
    <div class="d-flex align-items-center gap-2 mb-3">
        <span class="material-icons-outlined fs-3 text-info">fastfood</span>
        <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>
    </div>
    <hr />

    <!-- Informações do pedido -->
    <div class="card shadow-sm rounded-3 mb-4">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Pedido</dt>
                <dd class="col-sm-9">@Model.Pedido.PedidoId</dd>

                <dt class="col-sm-3 fw-semibold">Cliente</dt>
                <dd class="col-sm-9">@Model.Pedido.Nome</dd>

                <dt class="col-sm-3 fw-semibold">Data</dt>
                <dd class="col-sm-9">@Model.Pedido.PedidoEnviado</dd>

                <dt class="col-sm-3 fw-semibold">Entrega</dt>
                <dd class="col-sm-9">@Model.Pedido.PedidoEntregueEm</dd>
            </dl>
        </div>
    </div>

    <!-- Lista de lanches -->
    <div class="card shadow-sm rounded-3 mb-3">
        <div class="card-body">
            <h5 class="fw-semibold mb-3">Lanches do Pedido</h5>
            <div class="list-group">
                @foreach (var item in Model.Pedido.PedidoItens)
                {
                    totalPedido += (item.Lanche.Preco * item.Quantidade);
                    <div class="list-group-item d-flex justify-content-between align-items-center flex-wrap gap-3">
                        <div class="d-flex align-items-center gap-3">
                            <img src="@item.Lanche.ImagemUrl" class="img-fluid" height="100" width="100">
                            <div>
                                <div class="fw-semibold">@item.Lanche.Nome</div>
                                <div class="text-muted">@string.Format("{0:C}", item.Lanche.Preco) x @item.Quantidade</div>
                            </div>
                        </div>
                        <div class="fw-semibold">Subtotal: @string.Format("{0:C}", item.Lanche.Preco * item.Quantidade)</div>
                    </div>
                }
            </div>

            <!-- Total -->
            <div class="d-flex justify-content-end mt-3">
                <h5>Total do Pedido: <strong>@string.Format("{0:C}", totalPedido)</strong></h5>
            </div>
        </div>
    </div>

    <!-- Botão retornar -->
    <div class="d-flex justify-content-start mt-3">
        <a asp-action="Index" class="btn btn-outline-info d-flex align-items-center gap-2">
            <span class="material-icons-outlined">arrow_back</span>
            Retornar
        </a>
    </div>
</div>


