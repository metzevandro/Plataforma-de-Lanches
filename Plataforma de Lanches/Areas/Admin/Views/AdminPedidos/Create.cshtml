@model Plataforma_de_Lanches.Models.Pedido

@{
    ViewData["Title"] = "Criar Pedido";
}

<div class="container my-4">
    <!-- Cabeçalho -->
    <div class="d-flex align-items-center gap-2 mb-3">
        <span class="material-icons-outlined fs-3 text-primary">add_circle</span>
        <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>
    </div>
    <hr />

    <!-- Card com formulário -->
    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-action="Create" role="form" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Nome e Sobrenome -->
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <label asp-for="Nome" class="form-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Sobrenome" class="form-label"></label>
                        <input asp-for="Sobrenome" class="form-control" />
                        <span asp-validation-for="Sobrenome" class="text-danger"></span>
                    </div>
                </div>

                <!-- Endereços -->
                <div class="mb-3">
                    <label asp-for="Endereco1" class="form-label"></label>
                    <input asp-for="Endereco1" class="form-control" />
                    <span asp-validation-for="Endereco1" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Endereco2" class="form-label"></label>
                    <input asp-for="Endereco2" class="form-control" />
                    <span asp-validation-for="Endereco2" class="text-danger"></span>
                </div>

                <!-- CEP e Estado -->
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <label asp-for="Cep" class="form-label"></label>
                        <input asp-for="Cep" class="form-control" />
                        <span asp-validation-for="Cep" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="Estado" class="form-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <!-- Cidade, Telefone, Email -->
                <div class="mb-3">
                    <label asp-for="Cidade" class="form-label"></label>
                    <input asp-for="Cidade" class="form-control" />
                    <span asp-validation-for="Cidade" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Telefone" class="form-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Datas do pedido -->
                <div class="row mb-3">
                    <div class="col-sm-6">
                        <label asp-for="PedidoEnviado" class="form-label"></label>
                        <input asp-for="PedidoEnviado" class="form-control" type="datetime-local" />
                        <span asp-validation-for="PedidoEnviado" class="text-danger"></span>
                    </div>
                    <div class="col-sm-6">
                        <label asp-for="PedidoEntregueEm" class="form-label"></label>
                        <input asp-for="PedidoEntregueEm" class="form-control" type="datetime-local" />
                        <span asp-validation-for="PedidoEntregueEm" class="text-danger"></span>
                    </div>
                </div>

                <!-- Botões -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-1">
                        <span class="material-icons-outlined">add_circle</span>
                        Criar Pedido
                    </button>
                    <a asp-action="Index" class="btn btn-outline-info d-flex align-items-center gap-1">
                        <span class="material-icons-outlined">arrow_back</span>
                        Retornar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
