@model ReflectionIT.Mvc.Paging.PagingList<Plataforma_de_Lanches.Models.Pedido>

@{
    ViewData["Title"] = "Pedidos";
}

<div class="container my-4">
    <!-- Cabeçalho -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="fw-bold d-flex align-items-center gap-2">
            <span class="material-icons-outlined fs-3 text-primary">shopping_cart</span>
            Pedidos
        </h2>
        <a asp-action="Create" class="btn btn-primary d-flex align-items-center gap-2">
            <span class="material-icons-outlined">add_circle</span>
            Criar Pedido
        </a>
    </div>

    <!-- Filtro -->
    <form method="get" class="row g-2 mb-3">
        <div class="col-auto">
            <input name="filter" class="form-control" placeholder="Filtrar por nome" value="@Model.RouteValue["Filter"]" />
        </div>
        <div class="col-auto">
            <button type="submit" class="btn btn-secondary d-flex align-items-center gap-2">
                <span class="material-icons-outlined">search</span>
                Filtrar
            </button>
        </div>
    </form>

    <!-- Total de pedidos -->
    <p>Total de Pedidos: <strong>@Model.TotalRecordCount</strong></p>

    <!-- Tabela de pedidos -->
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nome)</th>
                    <th>@Html.DisplayNameFor(model => model.Sobrenome)</th>
                    <th>@Html.DisplayNameFor(model => model.Endereco1)</th>
                    <th>@Html.DisplayNameFor(model => model.Endereco2)</th>
                    <th>@Html.DisplayNameFor(model => model.Cep)</th>
                    <th>@Html.DisplayNameFor(model => model.Estado)</th>
                    <th>@Html.DisplayNameFor(model => model.Cidade)</th>
                    <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                    <th>@Html.DisplayNameFor(model => model.Email)</th>
                    <th class="text-center" style="width: 220px;">Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Sobrenome)</td>
                        <td>@Html.DisplayFor(modelItem => item.Endereco1)</td>
                        <td>@Html.DisplayFor(modelItem => item.Endereco2)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cep)</td>
                        <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                        <td>@Html.DisplayFor(modelItem => item.Cidade)</td>
                        <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center gap-2">
                                <a asp-action="Edit" asp-route-id="@item.PedidoId" class="btn btn-sm btn-warning d-flex align-items-center gap-1">
                                    <span class="material-icons-outlined">edit</span>
                                </a>
                                <a asp-action="Details" asp-route-id="@item.PedidoId" class="btn btn-sm btn-secondary text-white d-flex align-items-center gap-1">
                                    <span class="material-icons-outlined">info</span>
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.PedidoId" class="btn btn-sm btn-danger d-flex align-items-center gap-1">
                                    <span class="material-icons-outlined">delete</span>
                                </a>
                                <a asp-action="PedidoLanches" asp-route-id="@item.PedidoId" class="btn btn-sm btn-primary d-flex align-items-center gap-1">
                                    <span class="material-icons-outlined">fastfood</span>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Paginação -->
    <div class="d-flex justify-content-center mt-3">
        <vc:pager paging-list="@Model" page-link-css-class="page-link" page-item-css-class="page-item"></vc:pager>
    </div>
</div>
