@model IEnumerable<Plataforma_de_Lanches.Models.Pedido>

<div class="container my-4">
    <div class="d-flex align-items-center gap-2 mb-3">
        <span class="material-icons-outlined fs-3 text-primary">receipt_long</span>
        <h2 class="fw-bold mb-0">Pedidos Por Período</h2>
    </div>

    <!-- Formulário de Filtro -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form class="row g-3 align-items-end" method="get">
                <div class="col-md-5">
                    <label for="minDate" class="form-label">Data Inicial</label>
                    <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]" />
                </div>
                <div class="col-md-5">
                    <label for="maxDate" class="form-label">Data Final</label>
                    <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
                </div>
                <div class="col-md-2 d-flex">
                    <button type="submit" class="btn btn-success d-flex align-items-center gap-1">
                        <span class="material-icons-outlined">filter_alt</span>
                        Filtrar
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Estatísticas -->
    <div class="row mb-3">
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <span class="material-icons-outlined fs-2 text-primary">list_alt</span>
                    <h5 class="card-title mt-2">Total de Pedidos</h5>
                    <p class="card-text fw-bold fs-5">@Model.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <span class="material-icons-outlined fs-2 text-warning">fastfood</span>
                    <h5 class="card-title mt-2">Total de Lanches</h5>
                    <p class="card-text fw-bold fs-5">@Model.Sum(obj => obj.TotalItensPedido)</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <span class="material-icons-outlined fs-2 text-success">attach_money</span>
                    <h5 class="card-title mt-2">Valor Total</h5>
                    <p class="card-text fw-bold fs-5">@Model.Sum(obj => obj.PedidoTotal).ToString("c")</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Pedidos -->
    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.PedidoId)</th>
                            <th>@Html.DisplayNameFor(model => model.Nome)</th>
                            <th>@Html.DisplayNameFor(model => model.Email)</th>
                            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                            <th>@Html.DisplayNameFor(model => model.PedidoTotal)</th>
                            <th>@Html.DisplayNameFor(model => model.TotalItensPedido)</th>
                            <th>@Html.DisplayNameFor(model => model.PedidoEntregueEm)</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.PedidoId)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                                <td>@Html.DisplayFor(modelItem => item.PedidoTotal)</td>
                                <td>@Html.DisplayFor(modelItem => item.TotalItensPedido)</td>
                                <td>@Html.DisplayFor(modelItem => item.PedidoEntregueEm)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
