@model Plataforma_de_Lanches.Models.Lanche

@{
    ViewData["Title"] = "Criar Produto";
}

<div class="container my-4">
    <div class="d-flex align-items-center gap-2 mb-3">
        <span class="material-icons-outlined fs-3 text-primary">add_box</span>
        <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nome" class="form-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DescricaoCurta" class="form-label"></label>
                    <textarea asp-for="DescricaoCurta" class="form-control"></textarea>
                    <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DescricaoDetalhada" class="form-label"></label>
                    <textarea asp-for="DescricaoDetalhada" class="form-control"></textarea>
                    <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Preco" class="form-label"></label>
                    <input asp-for="Preco" class="form-control" />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImagemUrl" class="form-label"></label>
                    <input asp-for="ImagemUrl" class="form-control" />
                    <span asp-validation-for="ImagemUrl" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ImagemThumbnailUrl" class="form-label"></label>
                    <input asp-for="ImagemThumbnailUrl" class="form-control" />
                    <span asp-validation-for="ImagemThumbnailUrl" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-4 d-flex align-items-center">
                        <input class="form-check-input me-2" asp-for="IsLanchePreferido" />
                        <label class="form-check-label">
                            <span class="material-icons-outlined text-warning me-1">star</span>
                            @Html.DisplayNameFor(model => model.IsLanchePreferido)
                        </label>
                    </div>
                    <div class="col-md-4 d-flex align-items-center">
                        <input class="form-check-input me-2" asp-for="EmEstoque" />
                        <label class="form-check-label">
                            <span class="material-icons-outlined text-success me-1">inventory_2</span>
                            @Html.DisplayNameFor(model => model.EmEstoque)
                        </label>
                    </div>
                    <div class="col-md-4">
                        <label asp-for="CategoriaId" class="form-label"></label>
                        <select asp-for="CategoriaId" class="form-select" asp-items="ViewBag.CategoriaId"></select>
                    </div>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary d-flex align-items-center gap-2">
                        <span class="material-icons-outlined">add</span>
                        Criar Produto
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
                        <span class="material-icons-outlined">arrow_back</span>
                        Retornar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
