@model Plataforma_de_Lanches.Models.Lanche

@{
    ViewData["Title"] = "Detalhes do Lanche";
}

<div class="container my-4">
    <div class="d-flex align-items-center gap-2 mb-3">
        <span class="material-icons-outlined fs-3 text-info">info</span>
        <h2 class="fw-bold mb-0">@ViewData["Title"]</h2>
    </div>

    <div class="card shadow-sm rounded-3">
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-semibold">Nome</dt>
                <dd class="col-sm-9">@Model.Nome</dd>

                <dt class="col-sm-3 fw-semibold">Descrição Curta</dt>
                <dd class="col-sm-9">@Model.DescricaoCurta</dd>

                <dt class="col-sm-3 fw-semibold">Descrição Detalhada</dt>
                <dd class="col-sm-9">@Model.DescricaoDetalhada</dd>

                <dt class="col-sm-3 fw-semibold">Preço</dt>
                <dd class="col-sm-9">@Model.Preco</dd>

                <dt class="col-sm-3 fw-semibold">Imagem</dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImagemUrl" class="img-fluid rounded mb-2" alt="Imagem do Lanche" />
                </dd>

                <dt class="col-sm-3 fw-semibold">Thumbnail</dt>
                <dd class="col-sm-9">
                    <img src="@Model.ImagemThumbnailUrl" class="img-fluid rounded" alt="Thumbnail do Lanche" />
                </dd>

                <dt class="col-sm-3 fw-semibold">Preferido?</dt>
                <dd class="col-sm-9">@Model.IsLanchePreferido</dd>

                <dt class="col-sm-3 fw-semibold">Em Estoque?</dt>
                <dd class="col-sm-9">@Model.EmEstoque</dd>

                <dt class="col-sm-3 fw-semibold">Categoria</dt>
                <dd class="col-sm-9">@Model.Categoria?.Nome</dd>
            </dl>
        </div>
    </div>

    <div class="d-flex justify-content-between mt-3">
        <a asp-action="Index" class="btn btn-outline-secondary d-flex align-items-center gap-2">
            <span class="material-icons-outlined">arrow_back</span>
            Retornar
        </a>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning d-flex align-items-center gap-2">
            <span class="material-icons-outlined">edit</span>
            Editar
        </a>
    </div>
</div>
