@model Pedido

<h3 class="mb-3">Você está a um passo de completar o seu pedido</h3>
<hr />

<form asp-action="Checkout" method="post" class="row g-3">

    <!-- Nome e Sobrenome -->
    <div class="col-md-6">
        <label asp-for="Nome" class="form-label"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Sobrenome" class="form-label"></label>
        <input asp-for="Sobrenome" class="form-control" />
        <span asp-validation-for="Sobrenome" class="text-danger"></span>
    </div>

    <!-- Endereços -->
    <div class="col-md-6">
        <label asp-for="Endereco1" class="form-label"></label>
        <input asp-for="Endereco1" class="form-control" />
        <span asp-validation-for="Endereco1" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Endereco2" class="form-label"></label>
        <input asp-for="Endereco2" class="form-control" />
        <span asp-validation-for="Endereco2" class="text-danger"></span>
    </div>

    <!-- CEP, Cidade e Estado -->
    <div class="col-md-4">
        <label asp-for="Cep" class="form-label"></label>
        <input asp-for="Cep" class="form-control" />
        <span asp-validation-for="Cep" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Cidade" class="form-label"></label>
        <input asp-for="Cidade" class="form-control" value="Lins" />
        <span asp-validation-for="Cidade" class="text-danger"></span>
    </div>
    <div class="col-md-4">
        <label asp-for="Estado" class="form-label"></label>
        <input asp-for="Estado" class="form-control" value="São Paulo" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>

    <!-- Telefone e Email -->
    <div class="col-md-6">
        <label asp-for="Telefone" class="form-label"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <!-- Botões -->
    <div class="col-12 d-flex gap-2 mt-3" style="width: fit-content">
        <input class="btn btn-success flex-grow-1" type="submit" value="Concluir Pedido" />
        <a class="btn btn-outline-primary flex-grow-1" asp-controller="CarrinhoCompra" asp-action="Index">Retornar ao Carrinho</a>
    </div>

</form>
