@model Pedido

<div class="container my-4">

    <!-- Mensagem de checkout concluído -->
    <div class="p-4 mb-4 bg-light rounded-3 text-center">
        <h2>@ViewBag.CheckoutCompletoMensagem</h2>
    </div>

    <!-- Card do pedido -->
    <div class="card shadow-sm">
        <div class="card-body">

            <!-- Informações do cliente e pedido -->
            <div class="mb-3 d-flex flex-wrap gap-3" style="flex-direction: column">
                <p class="mb-0"><strong>Cliente:</strong> @Model.Nome</p>
                <p class="mb-0"><strong>Data do Pedido:</strong> @Model.PedidoEnviado</p>
                <p class="mb-0"><strong>Número do Pedido:</strong> @Model.PedidoId</p>
            </div>

            <!-- Tabela de itens -->
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th></th>
                            <th>Quantidade</th>
                            <th>Lanche</th>
                            <th>Preço</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.PedidoItens)
                        {
                            <tr>
                                <td><img src="@item.Lanche.ImagemUrl" width="40" height="40" class="rounded" /></td>
                                <td>@item.Quantidade</td>
                                <td>@item.Lanche.Nome</td>
                                <td>@item.Lanche.Preco.ToString("C2")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Total -->
            <div class="mt-3 text-end">
                <h4>Valor Total do Pedido: <strong>@(((decimal)ViewBag.TotalPedido).ToString("C2"))</strong></h4>
            </div>
        </div>
    </div>

    <!-- Botão de retorno -->
    <div class="text-left mt-4">
        <a class="btn btn-outline-primary btn-lg" asp-controller="Home" asp-action="Index">Retornar</a>
    </div>

</div>
