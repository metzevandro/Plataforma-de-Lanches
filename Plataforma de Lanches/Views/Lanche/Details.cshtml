@model Lanche

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm border-0">

                <!-- Imagem do lanche proporcional -->
                <div class="text-center p-3">
                    <img src="@Model.ImagemUrl"
                         class="img-fluid rounded"
                         alt="@Model.Nome"
                         style="max-height: 300px; width: auto;">
                </div>

                <div class="card-body text-center">

                    <!-- Nome -->
                    <h2 class="card-title mb-3">@Model.Nome</h2>

                    <!-- Descrição detalhada -->
                    <p class="card-text text-muted mb-4">
                        @Model.DescricaoDetalhada
                    </p>

                    <!-- Botões -->
                    <div class="d-flex justify-content-center gap-3 flex-wrap">
                        <a asp-controller="Lanche" asp-action="List"
                           class="btn btn-outline-info">
                            Ver todos os lanches
                        </a>
                        <a asp-controller="CarrinhoCompra" asp-action="AdicionarItemNoCarrinho"
                           asp-route-lancheId="@Model.Id"
                           class="btn btn-primary">
                            Adicionar @Model.Nome ao carrinho
                        </a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
