<div class="flex-fill" style="min-width: 250px; max-width: 300px;">
    <div class="card shadow-sm border-0 rounded overflow-hidden" style="height: 400px; display: flex; flex-direction: column;">

        <a asp-controller="Lanche" asp-action="Details" asp-route-lancheId="@Model.Id"
           class="text-decoration-none text-dark d-flex flex-column flex-grow-1">

            <!-- Imagem do lanche -->
            <img src="@Model.ImagemUrl"
                 class="card-img-top img-fluid"
                 alt="@Model.Nome"
                 style="height: 200px; object-fit: cover;">

            <!-- Corpo do card -->
            <div class="card-body d-flex flex-column gap-2 flex-grow-1">
                <h5 class="card-title fw-bold m-0">@Model.Nome</h5>
                <p class="card-text text-muted small m-0 flex-grow-1">@Model.DescricaoCurta</p>
                <h5 class="fw-bold text-success m-0">@Model.Preco.ToString("c")</h5>
            </div>
        </a>

        <!-- Footer do card com botão -->
        <div class="card-footer bg-transparent border-0 p-2">
            <form asp-action="AdicionarItemNoCarrinho" asp-controller="CarrinhoCompra" method="post" class="d-flex">
                <input type="hidden" name="LancheId" value="@Model.Id" />
                <button type="submit" class="btn btn-success w-100 d-flex align-items-center justify-content-center gap-2">
                    Adicionar ao Carrinho
                </button>
            </form>
        </div>
    </div>
</div>
